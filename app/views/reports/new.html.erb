<h1>New Report</h1>

<div class="content">
    <% semantic_form_for @report do |f| %>
        <% f.inputs do %>
            <%= f.input :name %>
            <%= @map.div(:width => 300, :height => 200) %>
            <%= f.input :latitude %>
            <%= f.input :longitude %>
            <%= f.input :hours, :input_html => {:size => "40x4"} %>
            <%= f.input :price_range, :collection => Report::PRICE_RANGES, :as => :select %>
            <%= f.input :food_types, :collection => Report::FOOD_TYPES, :as => :check_boxes %>
            <%= f.input :diet_friendliness, :collection => Report::DIETS, :as => :check_boxes %>
            <%= f.input :comments, :input_html => {:size => "40x4"} %>
        <% end -%>
        <% f.buttons do %>
            <%= f.commit_button "Save Report" %>
        <% end -%>
    <% end -%>
</div>